<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundBlue" />
            <gradient android:angle="-90" android:startColor="@color/backBlue" android:endColor="@color/backgroundBlue"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundBlue" />
            <solid android:color="@color/backBlue"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundBlue" />
            <gradient android:angle="-90" android:startColor="@color/backgroundBlue" android:endColor="@color/backBlue" />
        </shape>
    </item>
</selector>