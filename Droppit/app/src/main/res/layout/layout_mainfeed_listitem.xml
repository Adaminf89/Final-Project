<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="191dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/image_time_posted"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="14dp"
            app:civ_border_color="@color/offWhite"
            app:civ_border_width="0.5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            app:civ_border_color="@color/offWhite"
            app:civ_border_width="0.5dp"
            app:srcCompat="@drawable/iconlogo" />

        <TextView
            android:id="@+id/image_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/post_image"
            android:text="Land Before Time"
            android:textColor="@color/offWhite" />


        <TextView
            android:id="@+id/txtDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="61dp"
            android:layout_toEndOf="@+id/post_image"
            android:text="5m"
            android:textColor="@color/offWhite" />

        <TextView
            android:id="@+id/image_comments_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="94dp"
            android:layout_toEndOf="@+id/post_image"
            android:text="View all 3 comments"
            android:textColor="@color/offWhite" />

        <TextView
            android:id="@+id/image_time_posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image"
            android:layout_marginStart="18dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="407dp"
            android:text="Today"
            android:textColor="@color/offWhite" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/image_caption"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="123dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/offWhite"
            android:layout_alignStart="@+id/image_caption"
            android:layout_alignParentTop="true"
            android:text="John " />


    </RelativeLayout>

</RelativeLayout>