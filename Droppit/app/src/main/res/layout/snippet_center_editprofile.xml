<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!--TODO:add the imageview with images -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundBlue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundBlue"
            android:padding="20dp">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/edit_profile_photo"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>
            <!--app:civ_border_color="@color/black"-->
            <!--app:civ_border_width="2dp"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:id="@+id/changeProfilePhoto"
                android:layout_below="@+id/edit_profile_photo"
                android:layout_centerHorizontal="true"
                android:textColor="@color/link_blue"
                android:textSize="16sp"/>



            <!-- username section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/changeProfilePhoto"
                android:layout_marginTop="80dp"
                android:id="@+id/relLayout1">

                <!--<ImageView-->
                    <!--android:layout_width="35dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:src="@drawable/ic_username"-->
                    <!--android:layout_centerVertical="true"/>-->

                <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:textColor="@color/offWhite"
                    android:textColorHint="@color/offWhite"
                    android:textColorHighlight="@color/offWhite"
                    android:hint="username"
                    android:inputType="textNoSuggestions" />

            </RelativeLayout>


            <!-- display_name section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relLayout1"
                android:id="@+id/relLayout2"
                android:layout_marginTop="15dp">

                <!--<ImageView-->
                    <!--android:layout_width="35dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:src="@drawable/ic_display_name"-->
                    <!--android:layout_centerVertical="true"/>-->

                <EditText
                    android:id="@+id/edit_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:textColor="@color/offWhite"
                    android:textColorHint="@color/offWhite"
                    android:textColorHighlight="@color/offWhite"
                    android:hint="display name"
                    android:inputType="textNoSuggestions" />

            </RelativeLayout>

            <!-- description section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relLayout2"
                android:id="@+id/relLayout3"
                android:layout_marginTop="15dp">

                <!--<ImageView-->
                    <!--android:layout_width="35dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:src="@drawable/ic_description"-->
                    <!--android:layout_centerVertical="true"/>-->

                <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:background="@null"
                    android:textColor="@color/offWhite"
                    android:textColorHint="@color/offWhite"
                    android:textColorHighlight="@color/offWhite"
                    android:hint="Description"
                    android:inputType="textNoSuggestions" />

            </RelativeLayout>


            <!-- email section -->


        </RelativeLayout>

    </ScrollView>

    </merge>